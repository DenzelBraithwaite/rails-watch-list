<h1>Your watch list</h1>
<ul>
  <ul style="list-style: none"><% @list.bookmarks.each do |bookmark| %>
    <li>
      <div class="list-of-movies">
        <h3><%= bookmark.movie.title %></h3>
        <%= image_tag bookmark.movie.poster_url, width: 200  %>
        <br>
        <%= bookmark.comment %>
        <br>
        <br>
      </div>
    </li>
    <% end %>
  </ul>
  <p><%= link_to 'back', root_path %></p>
  <p><%= link_to 'Add a movie', new_list_bookmark_path(@list) %></p>

</ul>
